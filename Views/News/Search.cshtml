@{
    Layout = "_Layout";
}
<div class="row" ng-controller="searchController">
    <div class="col-12">
        <h2>Buscar Noticias</h2>
    </div>
    <div class="col-12">
        <form class="form-inline" ng-submit="find()">
            <div class="form-group mb-2">
                <label for="query" class="sr-only">Buscar </label>
                <input type="text" class="form-control" required id="query" placeholder="Escriba aqui su consulta" ng-model="search.query">
            </div>
            <div class="form-group mx-sm-2 mb-2">
                <label for="start" class="sr-only">Desde</label>
                <input type="date" class="form-control" id="start" ng-model="search.start">
            </div>
            <div class="form-group mx-sm-2 mb-2">
                <label for="end" class="sr-only">Hasta</label>
                <input type="date" class="form-control" id="end" ng-model="search.end">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Buscar</button>
        </form>
    </div>
    <div class="row">
        @await Html.PartialAsync("_NewCard")
        <div class="alert alert-warning" role="alert" ng-show="news.length === 0 && already">
            No se han encontrado resultados para tu busqueda
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/factories/news-factory.js"></script>
    <script src="~/js/controllers/search-controller.js"></script>
}